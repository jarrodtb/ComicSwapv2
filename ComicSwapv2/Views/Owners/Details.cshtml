@using Microsoft.AspNet.Identity 

@model ComicSwapv2.Models.Owner

@{
    ViewBag.Title = "Details";
}
<h3>Logged in as @User.Identity.GetUserName()</h3>
<h2>Details</h2>


<div>
    <h4>Owner</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Street)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Street)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.State)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.State)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Zip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zip)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <br />
    <h4>Comics For Sale</h4>
    <dl class="dl-horizontal">
        <dd>
            <table class="table">
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Issue</th>
                    <th>Price</th>
                    <th>Condition</th>
                    <th></th>
                </tr>
                @foreach (var comic in ViewBag.Comics)
                {
                    <tr>
                        <td>
                            <img src="@Url.Content("~/Images/" + Path.GetFileName(comic.ImagePath))" alt="NO_IMAGE_SUPPLIED" height="100">
                        </td>
                        <td>
                            @comic.Title
                        </td>
                        <td>
                            @comic.Issue
                        </td>
                        <td>
                            @comic.Price.ToString("C")
                        </td>
                        <td>
                            @comic.Condition
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Comics", new { id = comic.ComicID }, null) |
                            @Html.ActionLink("Delete", "Delete", "Comics", new { id = comic.ComicID }, null)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.OwnerID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
